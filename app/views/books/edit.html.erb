<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  
  <%= link_to "Show", book_path, style: "color:black" %> |
  <%= link_to "Back", index_book_path, style: "color:black" %>
  <% end %>
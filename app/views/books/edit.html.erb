<h2>Editing Book</h2>

<% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved.
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   </ul>
  <% end %>
<% end %>
  
<%= form_with model: @book do |f| %>

  <h4>本のタイトル</h4>
  <p class = "form" ><%= f.text_field :title %></p>

  <h4>感想</h4>
  <p class = "form" ><%= f.text_area :body, style: "height: 40px;" %></p>

  <p class = "form" ><%= f.submit 'Update Book' %></p>

  <p class = "form" >
    <%= link_to "Show", book_path, style: "color:black" %> |
    <%= link_to "Back", back_book_path, style: "color:black" %>
  </p>

  <% end %>
